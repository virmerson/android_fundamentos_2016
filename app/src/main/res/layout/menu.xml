<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_ciclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciclo de Vida" />


    <Button
        android:id="@+id/btn_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_ciclo"
        android:text="Calculadora" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 3"
        android:layout_below="@id/btn_ciclo" />


    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 4"
        android:layout_toRightOf="@id/btn_3"
        android:layout_below="@id/btn_calc"
        />


</RelativeLayout>